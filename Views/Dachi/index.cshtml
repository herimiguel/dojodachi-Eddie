<html>
    <head>
        <meta charset='utf-8'>
        <link rel="stylesheet" href="/css/style.css">
        <title>Hello!</title>
    </head>
    <body>
 <div id='data'>
        <p>Fullness: @ViewBag.fullness</p>  
        <p>Happiness: @ViewBag.happiness</p>
        <p>Meals: @ViewBag.meals</p>  
        <p>Energy: @ViewBag.energy</p>
    </div>
    <div id='message'>
        <p>@ViewBag.message</p>
    </div>   
    <div id="buttons">
        @if( @ViewBag.restart == null ){
            <a href = '/feed'>Feed</a>
            <a href = '/play'>Play</a>
            <a href = '/work'>Work</a>
            <a href = '/sleep'>Sleep</a>
        }else {
            <a href = '/restart'>Restart</a>
        }
    </div> 
    </body>
</html> 